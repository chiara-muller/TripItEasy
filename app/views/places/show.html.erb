<div class="container all-show">
  <div class="bookmark-div">
    <%= link_to new_place_bookmark_path(@place), class: "bookmark" do %>
      <i class="fa fa-bookmark"></i>
    <% end %>
  </div>


  <div>
    <h2><strong><%= @place.name  %></strong></h2>
  </div>

  <div>
    <h5><%= @place.address %></h5>
  </div>

  <% if @place.ratings.present? %>
    <div style="display: flex; align-items: center;">
      <h5 style="margin-right: 10px;">Ratings:</h5>
      <% (1..5).each do |i| %>
        <% if i <= @place.ratings %>
          <i class="fas fa-star" style="color: black;"></i>
        <% else %>
          <i class="far fa-star" style="color: black;"></i>
        <% end %>
      <% end %>
      <p style="margin-left: 10px;">(<%= @place.total_ratings %>)</p>
    </div>
  <% end %>

  <div class="photo" >
    <div class="square">
      <% @place.photos.first(5).each do |photo_ref| %>
        <%= image_tag place_photo_path(photo_ref), class: "squarePhoto" %>
      <% end %>
    </div>
  </div>

  <div class="container">
    <div class="bg-black text-white py-2 px-4 rounded-full">
      <% if @place.latitude && @place.longitude %>
      <% maps_link = "https://www.google.com/maps/search/?api=1&query=#{CGI.escape(@place.name)}" %>
      <a href="<%= maps_link %>" target="_blank">View on Google Maps</a>
      <% end %>
    </div>

    <div class="bg-black text-white py-2 px-4 rounded-full">
      <%= link_to "Randomise Again", places_search_path %>
    </div>
  </div>
</div>
