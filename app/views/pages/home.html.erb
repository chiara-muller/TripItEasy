<h1 class="title">Explorer</h1>
<div class="container">
  <div class="row">
    <%= form_with url: places_search_path, method: :get do |form| %>
      <div class="container">
        <div data-controller='autocomplete' data-autocomplete-api-key-value= "<%= ENV['GOOGLE_API'] %>" >
          <%= form.search_field :address, placeholder: 'Type specific location', data: {autocomplete_target: 'search'} %>
            <div class="d-none">
              <%= form.text_area :latitude, data: { autocomplete_target: 'lat'} %>
              <%= form.text_area :longitude, data: { autocomplete_target: 'lng'} %>
            </div>
        </div>
      </div>

      <div class="row">
          <%= form.text_area :type, placeholder: '"bar", "restaurant", "art museum", etc' %>
      </div>

      <div class="row">
          <%= form.number_field :radius, placeholder: 'Distance in meters' %>
      </div>

      <div class="row">Price range
          <%= form.range_field :minprice, in: 0..4 %>
      </div>

      <%# <div class="row">
        <div class="container">
          <div class='range'>
