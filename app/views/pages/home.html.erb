              <input type="range" min='0' max='20' step='2' />
              <span>10</span> %>

            <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

              $(function(){
              $('.range input').on('mousemove', function(){
                var getValRange = $(this).val();
                $('.range span').text(getValRange + 'km');
              });
              });
            </script>
          </div>
        </div>
      </div> %>

      <div class="row">
        <div class="container">
            <a class="btn-rounded" href="#">$</a>
            <a class="btn-rounded" href="#">$$</a>
            <a class="btn-rounded" href="#">$$$</a>
            <a class="btn-rounded" href="#">$$$$</a>
        </div>
      </div>

      <div class="row">
        <div class="container">
          <p class="randomise-text">Randomise</p>
        </div>
      </div>

      <div class="row">
        <div class="randomise-button-container">
            <%= button_tag type: "submit", class: 'randomise-button' do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8" style="padding: 10px">
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99" />
              </svg>
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

